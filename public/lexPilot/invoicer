import React, { useState, useEffect } from 'react';
import { Clock, Plus, X, Play, Pause, Square, AlertCircle, ChevronDown, FileText, DollarSign, CheckCircle } from 'lucide-react';

const LexPilot = () => {
  const [currentClient, setCurrentClient] = useState('John Smith');
  const [currentCase, setCurrentCase] = useState('Smith v RAF');
  const [timerRunning, setTimerRunning] = useState(false);
  const [timerSeconds, setTimerSeconds] = useState(743);
  const [showInvoiceModal, setShowInvoiceModal] = useState(false);
  const [showDepositModal, setShowDepositModal] = useState(false);
  const [alertsRead, setAlertsRead] = useState(false);
  
  const [invoiceData, setInvoiceData] = useState({
    services: [
      { id: 1, name: 'Consultation', hours: 0.5, rate: 2000, amount: 1000 },
      { id: 2, name: 'Draft Letter', hours: 1.0, rate: 2000, amount: 2000 }
    ],
    disbursements: [
      { id: 1, description: 'Sheriff Service', amount: 850 }
    ],
    lawyer: 'Senior Partner',
    dueInDays: 14
  });

  useEffect(() => {
    let interval;
    if (timerRunning) {
      interval = setInterval(() => {
        setTimerSeconds(s => s + 1);
      }, 1000);
    }
    return () => clearInterval(interval);
  }, [timerRunning]);

  const formatTime = (seconds) => {
    const h = Math.floor(seconds / 3600);
    const m = Math.floor((seconds % 3600) / 60);
    const s = seconds % 60;
    return `${h}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
  };

  const calculateInvoiceTotal = () => {
    const subtotal = invoiceData.services.reduce((sum, s) => sum + s.amount, 0) +
                     invoiceData.disbursements.reduce((sum, d) => sum + d.amount, 0);
    const vat = subtotal * 0.15;
    return { subtotal, vat, total: subtotal + vat };
  };

  const addService = () => {
    const newService = {
      id: Date.now(),
      name: 'New Service',
      hours: 1,
      rate: 2000,
      amount: 2000
    };
    setInvoiceData({
      ...invoiceData,
      services: [...invoiceData.services, newService]
    });
  };

  const updateService = (id, field, value) => {
    setInvoiceData({
      ...invoiceData,
      services: invoiceData.services.map(s => {
        if (s.id === id) {
          const updated = { ...s, [field]: parseFloat(value) || 0 };
          if (field === 'hours' || field === 'rate') {
            updated.amount = updated.hours * updated.rate;
          }
          return updated;
        }
        return s;
      })
    });
  };

  const removeService = (id) => {
    setInvoiceData({
      ...invoiceData,
      services: invoiceData.services.filter(s => s.id !== id)
    });
  };

  const addDisbursement = () => {
    const newDisbursement = {
      id: Date.now(),
      description: 'New Disbursement',
      amount: 0
    };
    setInvoiceData({
      ...invoiceData,
      disbursements: [...invoiceData.disbursements, newDisbursement]
    });
  };

  const updateDisbursement = (id, field, value) => {
    setInvoiceData({
      ...invoiceData,
      disbursements: invoiceData.disbursements.map(d => 
        d.id === id ? { ...d, [field]: field === 'amount' ? parseFloat(value) || 0 : value } : d
      )
    });
  };

  const removeDisbursement = (id) => {
    setInvoiceData({
      ...invoiceData,
      disbursements: invoiceData.disbursements.filter(d => d.id !== id)
    });
  };

  const totals = calculateInvoiceTotal();
  const trustAvailable = 18500;
  const trustSufficient = trustAvailable >= totals.total;

  return (
    <div className="min-h-screen bg-gradient-to-br from-slate-50 to-slate-100">
      {/* Header */}
      <div className="bg-gradient-to-r from-blue-900 to-blue-800 text-white shadow-lg">
        <div className="max-w-7xl mx-auto px-6 py-4">
          <div className="flex items-center justify-between">
            <div className="flex items-center space-x-8">
              <h1 className="text-2xl font-bold tracking-tight">LexPilot</h1>
              <nav className="flex items-center space-x-1">
                <button className="px-4 py-2 hover:bg-white/10 rounded-lg transition-colors flex items-center gap-2">
                  User <ChevronDown size={16} />
                </button>
                <button className="px-4 py-2 hover:bg-white/10 rounded-lg transition-colors flex items-center gap-2">
                  <Plus size={16} /> Time
                </button>
                <button className="px-4 py-2 hover:bg-white/10 rounded-lg transition-colors flex items-center gap-2">
                  <Plus size={16} /> Invoice
                </button>
                <button className="px-4 py-2 hover:bg-white/10 rounded-lg transition-colors flex items-center gap-2">
                  Reports <ChevronDown size={16} />
                </button>
                <button className="px-4 py-2 hover:bg-white/10 rounded-lg transition-colors">
                  Settings
                </button>
              </nav>
            </div>
          </div>
        </div>
      </div>

      <div className="max-w-7xl mx-auto px-6 py-6">
        {/* Client & Case Selection */}
        <div className="bg-white rounded-xl shadow-sm p-4 mb-6 border border-slate-200">
          <div className="flex items-center gap-6">
            <div className="flex items-center gap-2">
              <span className="text-sm font-medium text-slate-600">Clients:</span>
              <select 
                value={currentClient}
                onChange={(e) => setCurrentClient(e.target.value)}
                className="px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option>John Smith</option>
                <option>Jane Dlamini</option>
              </select>
              <button className="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-1">
                <Plus size={16} /> Add Client
              </button>
            </div>
            <div className="flex items-center gap-2">
              <span className="text-sm font-medium text-slate-600">Cases:</span>
              <select 
                value={currentCase}
                onChange={(e) => setCurrentCase(e.target.value)}
                className="px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
              >
                <option>Smith v RAF</option>
                <option>Jones v RoadCorp</option>
              </select>
              <button className="px-3 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-1">
                <Plus size={16} /> Add Case
              </button>
            </div>
          </div>
        </div>

        {/* KPI Dashboard */}
        <div className="bg-white rounded-xl shadow-sm p-6 mb-6 border border-slate-200">
          <h2 className="text-lg font-semibold text-slate-800 mb-4">TODAY</h2>
          <div className="grid grid-cols-3 gap-6">
            <div className="group cursor-pointer">
              <div className="flex justify-between items-center mb-2">
                <span className="text-sm font-medium text-slate-600">Unbilled Time:</span>
                <span className="text-2xl font-bold text-slate-900">R 42,300</span>
              </div>
              <div className="w-full bg-slate-200 rounded-full h-3 overflow-hidden">
                <div className="bg-gradient-to-r from-blue-500 to-blue-600 h-full rounded-full transition-all" style={{width: '70%'}}></div>
              </div>
              <span className="text-xs text-slate-500 mt-1 block">70% capacity</span>
            </div>
            <div className="group cursor-pointer">
              <div className="flex justify-between items-center mb-2">
                <span className="text-sm font-medium text-slate-600">Outstanding:</span>
                <span className="text-2xl font-bold text-slate-900">R 96,200</span>
              </div>
              <div className="w-full bg-slate-200 rounded-full h-3 overflow-hidden">
                <div className="bg-gradient-to-r from-amber-500 to-amber-600 h-full rounded-full transition-all" style={{width: '60%'}}></div>
              </div>
              <span className="text-xs text-slate-500 mt-1 block">60% collected</span>
            </div>
            <div className="group cursor-pointer relative">
              <div className="flex justify-between items-center mb-2">
                <span className="text-sm font-medium text-slate-600">Trust Available:</span>
                <span className="text-2xl font-bold text-red-600">R 310,450</span>
              </div>
              <div className="w-full bg-slate-200 rounded-full h-3 overflow-hidden">
                <div className="bg-gradient-to-r from-red-500 to-red-600 h-full rounded-full transition-all" style={{width: '30%'}}></div>
              </div>
              <span className="text-xs text-red-600 mt-1 block font-medium">Low - Smith v RAF affected</span>
            </div>
          </div>
        </div>

        {/* Alerts */}
        {!alertsRead && (
          <div className="bg-gradient-to-r from-red-50 to-orange-50 border-l-4 border-red-500 rounded-xl p-6 mb-6 shadow-sm">
            <div className="flex items-center justify-between mb-4">
              <h2 className="text-lg font-semibold text-slate-800 flex items-center gap-2">
                <AlertCircle className="text-red-500" size={20} />
                ATTENTION
              </h2>
              <div className="flex gap-2">
                <button 
                  onClick={() => setAlertsRead(true)}
                  className="px-3 py-1 text-sm bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors"
                >
                  Mark All as Read
                </button>
                <button className="px-3 py-1 text-sm bg-white border border-slate-300 rounded-lg hover:bg-slate-50 transition-colors">
                  Snooze Alerts
                </button>
              </div>
            </div>
            <div className="space-y-3">
              <div 
                onClick={() => setShowDepositModal(true)}
                className="flex items-center justify-between p-4 bg-white rounded-lg border border-red-200 hover:border-red-400 cursor-pointer transition-all hover:shadow-md"
              >
                <span className="font-medium text-slate-800">Trust low – Smith v RAF</span>
                <button className="text-red-600 hover:text-red-800 text-sm font-medium">Open Deposit Modal →</button>
              </div>
              <div 
                onClick={() => setShowInvoiceModal(true)}
                className="flex items-center justify-between p-4 bg-white rounded-lg border border-orange-200 hover:border-orange-400 cursor-pointer transition-all hover:shadow-md"
              >
                <span className="font-medium text-slate-800">Invoice overdue – Dlamini</span>
                <button className="text-orange-600 hover:text-orange-800 text-sm font-medium">Open Invoice Modal →</button>
              </div>
              <div className="flex items-center justify-between p-4 bg-white rounded-lg border border-blue-200 hover:border-blue-400 cursor-pointer transition-all hover:shadow-md">
                <span className="font-medium text-slate-800">Timer running – Jones v RoadCorp</span>
                <button 
                  onClick={() => setTimerRunning(false)}
                  className="text-blue-600 hover:text-blue-800 text-sm font-medium"
                >
                  Stop Timer →
                </button>
              </div>
            </div>
          </div>
        )}

        {/* Active Timer */}
        <div className="bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-xl shadow-lg p-6 mb-6">
          <h2 className="text-sm font-medium mb-3 opacity-90">ACTIVE TIMER</h2>
          <div className="flex items-center justify-between">
            <div>
              <div className="text-lg font-medium mb-1">Current Timer: {currentCase}</div>
              <div className="text-3xl font-bold font-mono">{formatTime(timerSeconds)}</div>
            </div>
            <div className="flex gap-3">
              <button 
                onClick={() => setTimerRunning(!timerRunning)}
                className="px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-blue-50 transition-all flex items-center gap-2 font-medium shadow-md"
              >
                {timerRunning ? <><Pause size={20} /> Pause</> : <><Play size={20} /> Resume</>}
              </button>
              <button 
                onClick={() => { setTimerRunning(false); setTimerSeconds(0); }}
                className="px-6 py-3 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all flex items-center gap-2 font-medium shadow-md"
              >
                <Square size={20} /> Stop
              </button>
            </div>
          </div>
          <div className="mt-4 pt-4 border-t border-white/20">
            <button className="px-4 py-2 bg-white/20 hover:bg-white/30 rounded-lg transition-colors flex items-center gap-2">
              <Play size={16} /> Start New Timer <ChevronDown size={16} />
            </button>
          </div>
        </div>
      </div>

      {/* Invoice Modal */}
      {showInvoiceModal && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
          <div className="bg-white rounded-2xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto">
            <div className="sticky top-0 bg-gradient-to-r from-blue-600 to-blue-700 text-white p-6 rounded-t-2xl">
              <div className="flex items-center justify-between">
                <div>
                  <h2 className="text-2xl font-bold mb-1">Invoice for: {currentClient}</h2>
                  <p className="text-blue-100">{currentCase}</p>
                </div>
                <button 
                  onClick={() => setShowInvoiceModal(false)}
                  className="p-2 hover:bg-white/20 rounded-lg transition-colors"
                >
                  <X size={24} />
                </button>
              </div>
              <div className="flex gap-6 mt-4 text-sm">
                <div>Date: <span className="font-medium">{new Date().toLocaleDateString()}</span></div>
                <div>Due: <span className="font-medium">+{invoiceData.dueInDays} days</span></div>
                <div>Lawyer: 
                  <select 
                    value={invoiceData.lawyer}
                    onChange={(e) => setInvoiceData({...invoiceData, lawyer: e.target.value})}
                    className="ml-2 px-2 py-1 bg-white/20 border border-white/30 rounded text-white"
                  >
                    <option>Senior Partner</option>
                    <option>Associate</option>
                  </select>
                </div>
              </div>
            </div>

            <div className="p-6">
              {/* Services */}
              <div className="mb-6">
                <h3 className="text-lg font-semibold text-slate-800 mb-3">SERVICES / TIME ENTRIES</h3>
                <div className="border border-slate-200 rounded-lg overflow-hidden">
                  <table className="w-full">
                    <thead className="bg-slate-50">
                      <tr>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Service</th>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Hours</th>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Rate</th>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Amount</th>
                        <th className="px-4 py-3"></th>
                      </tr>
                    </thead>
                    <tbody className="divide-y divide-slate-200">
                      {invoiceData.services.map(service => (
                        <tr key={service.id} className="hover:bg-slate-50 transition-colors">
                          <td className="px-4 py-3">
                            <input 
                              type="text" 
                              value={service.name}
                              onChange={(e) => updateService(service.id, 'name', e.target.value)}
                              className="w-full px-2 py-1 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
                            />
                          </td>
                          <td className="px-4 py-3">
                            <input 
                              type="number" 
                              step="0.1"
                              value={service.hours}
                              onChange={(e) => updateService(service.id, 'hours', e.target.value)}
                              className="w-20 px-2 py-1 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
                            />
                          </td>
                          <td className="px-4 py-3">
                            <input 
                              type="number" 
                              value={service.rate}
                              onChange={(e) => updateService(service.id, 'rate', e.target.value)}
                              className="w-24 px-2 py-1 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
                            />
                          </td>
                          <td className="px-4 py-3 font-medium">R{service.amount.toLocaleString()}</td>
                          <td className="px-4 py-3">
                            <button 
                              onClick={() => removeService(service.id)}
                              className="text-red-500 hover:text-red-700"
                            >
                              <X size={18} />
                            </button>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
                <button 
                  onClick={addService}
                  className="mt-3 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2"
                >
                  <Plus size={16} /> Add Service
                </button>
              </div>

              {/* Disbursements */}
              <div className="mb-6">
                <h3 className="text-lg font-semibold text-slate-800 mb-3">DISBURSEMENTS</h3>
                <div className="border border-slate-200 rounded-lg overflow-hidden">
                  <table className="w-full">
                    <thead className="bg-slate-50">
                      <tr>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Description</th>
                        <th className="px-4 py-3 text-left text-sm font-medium text-slate-600">Amount</th>
                        <th className="px-4 py-3"></th>
                      </tr>
                    </thead>
                    <tbody className="divide-y divide-slate-200">
                      {invoiceData.disbursements.map(disb => (
                        <tr key={disb.id} className="hover:bg-slate-50 transition-colors">
                          <td className="px-4 py-3">
                            <input 
                              type="text" 
                              value={disb.description}
                              onChange={(e) => updateDisbursement(disb.id, 'description', e.target.value)}
                              className="w-full px-2 py-1 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
                            />
                          </td>
                          <td className="px-4 py-3">
                            <input 
                              type="number" 
                              value={disb.amount}
                              onChange={(e) => updateDisbursement(disb.id, 'amount', e.target.value)}
                              className="w-32 px-2 py-1 border border-slate-300 rounded focus:ring-2 focus:ring-blue-500"
                            />
                          </td>
                          <td className="px-4 py-3">
                            <button 
                              onClick={() => removeDisbursement(disb.id)}
                              className="text-red-500 hover:text-red-700"
                            >
                              <X size={18} />
                            </button>
                          </td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
                <button 
                  onClick={addDisbursement}
                  className="mt-3 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center gap-2"
                >
                  <Plus size={16} /> Add Disbursement
                </button>
              </div>

              {/* Totals */}
              <div className="bg-slate-50 rounded-lg p-6 mb-6">
                <div className="space-y-2 text-right">
                  <div className="flex justify-between text-lg">
                    <span className="text-slate-600">Subtotal:</span>
                    <span className="font-semibold">R{totals.subtotal.toLocaleString()}</span>
                  </div>
                  <div className="flex justify-between text-lg">
                    <span className="text-slate-600">VAT 15%:</span>
                    <span className="font-semibold">R{totals.vat.toLocaleString()}</span>
                  </div>
                  <div className="flex justify-between text-2xl border-t-2 border-slate-300 pt-2">
                    <span className="font-bold text-slate-800">TOTAL:</span>
                    <span className="font-bold text-blue-600">R{totals.total.toLocaleString()}</span>
                  </div>
                </div>
                
                <div className="mt-4 pt-4 border-t border-slate-300">
                  <div className="flex justify-between items-center mb-2">
                    <span className="text-sm font-medium text-slate-600">Trust Funds Available:</span>
                    <span className={`text-lg font-bold ${trustSufficient ? 'text-green-600' : 'text-red-600'}`}>
                      R{trustAvailable.toLocaleString()}
                    </span>
                  </div>
                  <div className="w-full bg-slate-200 rounded-full h-3 overflow-hidden">
                    <div 
                      className={`h-full rounded-full transition-all ${trustSufficient ? 'bg-green-500' : 'bg-red-500'}`}
                      style={{width: `${Math.min((trustAvailable / totals.total) * 100, 100)}%`}}
                    ></div>
                  </div>
                  {!trustSufficient && (
                    <p className="text-sm text-red-600 mt-2 font-medium">⚠ Insufficient trust funds</p>
                  )}
                </div>
              </div>

              {/* Actions */}
              <div className="flex gap-3 justify-between">
                <button className="px-6 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors flex items-center gap-2">
                  <FileText size={18} /> Preview PDF
                </button>
                <div className="flex gap-3">
                  <button className="px-6 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors">
                    Save Draft
                  </button>
                  <button className="px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 transition-all flex items-center gap-2 shadow-lg">
                    <CheckCircle size={18} /> Send Invoice
                  </button>
                </div>
              </div>
              <p className="text-xs text-slate-500 mt-3 text-center">Rule 54/86 compliance enforced</p>
            </div>
          </div>
        </div>
      )}

      {/* Deposit Modal */}
      {showDepositModal && (
        <div className="fixed inset-0 bg-black/50 flex items-center justify-center z-50 p-4">
          <div className="bg-white rounded-2xl shadow-2xl max-w-md w-full">
            <div className="bg-gradient-to-r from-green-600 to-green-700 text-white p-6 rounded-t-2xl">
              <div className="flex items-center justify-between">
                <h2 className="text-xl font-bold">Trust Deposit</h2>
                <button 
                  onClick={() => setShowDepositModal(false)}
                  className="p-2 hover:bg-white/20 rounded-lg transition-colors"
                >
                  <X size={20} />
                </button>
              </div>
            </div>
            <div className="p-6">
              <div className="mb-4">
                <label className="block text-sm font-medium text-slate-700 mb-2">Client / Case</label>
                <input 
                  type="text" 
                  value={currentCase}
                  readOnly
                  className="w-full px-4 py-2 border border-slate-300 rounded-lg bg-slate-50"
                />
              </div>
              <div className="mb-4">
                <label className="block text-sm font-medium text-slate-700 mb-2">Deposit Amount</label>
                <input 
                  type="number" 
                  placeholder="R 0.00"
                  className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500"
                />
              </div>
              <div className="mb-6">
                <label className="block text-sm font-medium text-slate-700 mb-2">Reference / Notes</label>
                <textarea 
                  rows="3"
                  className="w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-green-500"
                  placeholder="Payment reference..."
                />
              </div>
              <button className="w-full px-6 py-3 bg-gradient-to-r from-green-600 to-green-700 text-white rounded-lg hover:from-green-700 hover:to-green-800 transition-all font-medium shadow-lg">
                Record Deposit
              </button>
            </div>
          </div>
        </div>
      )}
    </div>
  );
};

export default LexPilot;